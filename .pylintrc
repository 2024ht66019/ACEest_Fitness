# Pylint configuration for SonarQube analysis
[MASTER]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append(".")'

# Use multiple processes to speed up Pylint
jobs=1

# Allow loading of arbitrary C extensions
unsafe-load-any-extension=no

[MESSAGES CONTROL]
# Disable specific warnings/errors
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    C0301,  # line-too-long (handled by black)
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0212,  # protected-access
    W0613,  # unused-argument (common in Flask routes)
    E1101,  # no-member (SQLAlchemy false positives)

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

[BASIC]
# Good variable names
good-names=i,j,k,ex,Run,_,id,db,app

[DESIGN]
# Maximum number of arguments for function / method
max-args=7

# Maximum number of attributes for a class
max-attributes=10

[IMPORTS]
# Allow wildcard imports in __init__.py
allow-wildcard-with-all=yes
