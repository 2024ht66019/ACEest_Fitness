# ACEest Fitness & Gym Management System - Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://aceest_user:your_db_password@db:5432/aceest_fitness

# Database Credentials (for Docker Compose PostgreSQL service)
POSTGRES_DB=aceest_fitness
POSTGRES_USER=aceest_user
POSTGRES_PASSWORD=your_db_password

# Application Settings
WORKOUTS_PER_PAGE=20

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# Debug Mode (set to False in production)
DEBUG=False
